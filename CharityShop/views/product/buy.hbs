<div class="wrapper fadeInDown" id="add-product-from">

    <div id="formContent">
        <h2 class="active">Buy a product!</h2>
        <figure class="responsive-figure figure-fix-height">
            <img class="responsive-img" src="data:{{product.image.contentType}};base64,{{product.image.data}}" alt="">
            <p id="cause-name">The cause you are donating for: {{product.cause.name}}</p>
        </figure>
        <form method="post">
            <input type="text" class="fadeIn second" name="name" value="{{product.name}}" disabled>
            <textarea type="text" class="fadeIn third" name="description" disabled>{{product.description}}</textarea>
            <input type="number" class="fadeIn third" name="price" value="{{product.price}}" disabled step="0.1"
                   min="0">
            <input type="submit" class="fadeIn fourth" value="Buy">
        </form>
    </div>
</div>