<div class="wrapper fadeInDown" id="add-product-from">
    <div id="formContent">
        <h2 class="active">Редактиране на продукт!</h2>

        <form method="post" enctype="multipart/form-data">
            <input type="text" class="fadeIn second" name="name" value="{{product.name}}" required>
            <textarea type="text" class="fadeIn third" name="description">{{product.description}}</textarea>
            <input type="number" class="fadeIn third" required name="price" value="{{product.price}}" step="0.1" min="0">
            <select class="fadeIn third" name="category" id="category" required>
                {{#each categories}}
                        <option value="{{_id}}">{{name}}</option>
                {{/each}}
            </select>
            <input id="file" type="file" name="image" accept=".jpg,.jpeg,.png" required>
            <label for="file" class="fadeIn third">Изберете снимка</label>
            <input type="submit" class="fadeIn fourth" value="Редактиране">
        </form>
    </div>
</div>