<div class="wrapper fadeInDown" id="add-product-from">
    <div id="formContent">
        <h2 class="active">Add product to donate!</h2>

        <form method="post" enctype="multipart/form-data">
            <input type="text" class="fadeIn second" name="name" placeholder="Product name">
            <textarea type="text" class="fadeIn third" name="description" placeholder="Description"></textarea>
            <input type="number" class="fadeIn third" name="price" placeholder="Product price" step="0.1" min="0">
            <select class="fadeIn third" name="category" id="category">
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{/each}}
            </select>
            <input id="file" type="file"  name="image" accept=".jpg,.jpeg,.png" >
            <label for="file" class="fadeIn third">Choose file</label>
            <input type="submit" class="fadeIn fourth" value="Add product">
        </form>
    </div>
</div>