<div class="wrapper fadeInDown" id="add-product-from">
    <div id="formContent">
        <h2 class="active">Add cause</h2>

        <form method="post" enctype="multipart/form-data">
            <input type="text" class="fadeIn second" name="name" placeholder="Cause name">
            <textarea type="text" class="fadeIn third" name="description" placeholder="Cause description"></textarea>
            <input type="number" class="fadeIn third" name="goal" placeholder="Goal money" step="1" min="0">
            <input id="file" type="file"  name="image" accept=".jpg,.jpeg,.png" >
            <label for="file" class="fadeIn third">Choose photo</label>
            <input type="submit" class="fadeIn fourth" value="Add cause">
        </form>
    </div>
</div>