<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0"
             data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>Accomplished causes</h2>
                <p>These are the causes we have been able to accomplish with your help.</p>
                <p>We have been able to make many people happy!</p>
                <div class="text-center">
                    <a href="/cause/all" class="primary_btn">Current causes</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="features_causes">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                {{#each causes}}
                    <div class="card">
                        <div class="card-body">
                            <figure>
                                <img class="card-img-top img-fluid" src="data:{{this.image.contentType}};base64,{{this.image.data}}" alt="Photo of the cause">
                            </figure>
                            <div class="card_inner_body">
                                <h4 class="card-title">{{name}}</h4>
                                <p class="card-text">{{description}}</p>
                                <div class="d-flex justify-content-between raised_goal">
                                    <p>Collected: {{raised}} lv.</p>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between donation align-items-center">
                                {{#if ../isAdmin}}
                                    <a href="/cause/delete/{{this._id}}" class="primary_btn">Delete</a>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</section>