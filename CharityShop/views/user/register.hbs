<div class="wrapper fadeInDown" id="register-form">
    <div id="formContent">
        <h2 class="active">Register</h2>

        <div class="fadeIn first">
            <img src="/img/userIcon.png" id="icon" alt="User Icon" />
        </div>

        <form method="post">
            <input type="text" class="fadeIn second" name="username" placeholder="Username">
            <input type="password" class="fadeIn third" name="password" placeholder="Password">
            <input type="password" class="fadeIn third" name="confirmedPassword" placeholder="Confirm Password">
            <input type="text" class="fadeIn third" name="firstName" placeholder="First Name">
            <input type="text" class="fadeIn third" name="lastName" placeholder="Last Name">
            <input type="number" class="fadeIn third" name="age" placeholder="Age">
            <input type="submit" class="fadeIn fourth" value="Register">
        </form>
    </div>
</div>