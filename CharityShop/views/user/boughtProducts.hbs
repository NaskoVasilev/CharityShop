<section class="features_causes" id="products">
    <h2 id="bought-products">Bought products!</h2>
    <div class="container">

        <div class="row">
            {{#each products}}
                <div class="col-lg-4 col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <figure>
                                <img class="card-img-top img-fluid" src="data:{{image.contentType}};base64,{{image.data}}" alt="Photo of the product">
                            </figure>
                            <div class="card_inner_body">
                                <h4 class="card-title">{{name}}</h4>
                                <p>Description: {{description}}</p>
                                <div class="d-flex justify-content-between raised_goal">
                                    <p><span>Price: {{price}} lv.s</span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>