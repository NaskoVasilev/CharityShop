<div class="wrapper fadeInDown" id="login-form">
    <div id="formContent">
        <h2 class="active">Вход</h2>

        <div class="fadeIn first">
            <img src="/img/userIcon.png" id="icon" alt="User Icon" />
        </div>

        <form method="post">
            <input type="text" id="login" class="fadeIn second" name="username" placeholder="Потребителско име" required>
            <input type="password" id="password" class="fadeIn third" name="password" placeholder="Парола" required>
            <input type="submit" class="fadeIn fourth" value="Вход">
        </form>
    </div>
</div>