<section class="home_banner_area">
    <div class="banner_inner">
        <div class="container">
            <div class="banner_content">
                <p class="upper_text">Lend a hand</p>
                <h2>to improve the world around us</h2>
                <p>
                    Now is the time to help the people around you and make the world a better place for living. Just donate a product or join some of the events organized by us.
                </p>
                <a class="primary_btn mr-20" href="/product/add">Donate a product</a>
                <a class="primary_btn yellow_btn text-white" href="/cause/all">Causes</a>
                <a class="primary_btn mr-20" href="/products">Buy a product</a>
            </div>
        </div>
    </div>
</section>

<!--Latest causes section-->
<section class="features_causes" id="latest-causes">
    <div class="container">
        <div class="main_title">
            <h2>Current causes</h2>
            <p>Choose the ones you like the most and simply help!</p>
            <div class="text-center">
                <a href="/cause/all" class="primary_btn">All causes</a>
            </div>
        </div>

        <div class="row">
            {{#each causes}}
                <div class="col-lg-4 col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <figure class="fix-size-image">
							<a href="/cause/details/{{_id}}">
                                <img class="card-img-top img-fluid"
                                     src="data:{{this.image.contentType}};base64,{{this.image.data}}"
                                     alt="Снимка на кауза">
							</a>
                            </figure>
                            <div class="card_inner_body">
                                <h4 class="card-title">{{this.name}}</h4>
                                <div class="d-flex justify-content-between raised_goal">
                                    <p>Collected: {{this.raised}} lv.</p>
                                    <p><span>Needed: {{this.goal}} lv.</span></p>
                                </div>
                                <div class="d-flex justify-content-between donation align-items-center">
                                    <a href="/cause/donate/{{_id}}" class="primary_btn">Donate</a>
                                    {{#if ../isAdmin}}
                                        <a href="/cause/delete/{{this._id}}" class="primary_btn">Delete</a>
                                        <a href="/cause/edit/{{this._id}}" class="primary_btn">Edit</a>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>

<!--Upcoming events-->
<section class="event_area section_gap_custom">
    <div class="container">
        <div class="main_title">
            <h2>Future events</h2>
            <p>You can join the event by simply signing up.</p>
            <div class="text-center">
                <a href="/event/all" class="primary_btn">All events</a>
            </div>
        </div>

        <div class="row">
            {{#each events}}
                <div class="col-lg-6">
                    <div class="single_event">
                        <div class="row align-items-center">
                            <div class="col-lg-6 col-md-6">
                                <figure>
                                    <img class="img-fluid w-100" src="data:{{image.contentType}};base64,{{image.data}}">
                                    <div class="img-overlay"></div>
                                </figure>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="content_wrapper">
                                    <h3 class="title">
                                        <a href="/event/details/{{_id}}">{{name}}</a>
                                    </h3>
                                    <div id="endDate{{@index}}" style="display: none;">{{date}}</div>
                                    <p>{{description}}</p>
                                    <div id="clock{{@index}}" class="d-flex count_time">
                                        <div class="mr-25">
                                            <h4 class="days"></h4>
                                            <p>Days</p>
                                        </div>
                                        <div class="mr-25">
                                            <h4 class="hours"></h4>
                                            <p>Hours</p>
                                        </div>
                                        <div class="mr-25">
                                            <h4 class="minutes"></h4>
                                            <p>Minutes</p>
                                        </div>
                                        <div>
                                            <h4 class="seconds"></h4>
                                            <p>Seconds</p>
                                        </div>
                                    </div>
                                    <a href="/event/details/{{_id}}" class="primary_btn">See more</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
<script src="../../content/js/countdown.js"></script>
<script src="../../content/js/jquery-3.2.1.min.js"></script>

<script>
    let evenetsCount = document.getElementsByClassName('days').length

    $(function () {
        for (let i = 0; i < evenetsCount; i++) {
            let dateString = document.getElementById('endDate' + i).innerHTML
            initializeClock('clock' + i, dateString)
        }
    })
</script>