<section class="banner_area">
    <div class="banner_inner d-flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0"
             data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h2>Блог</h2>
                <p id="blog-info">
                    Можеш да задаваш въпроси, да намериш интересни статии, <br>
                    да предложиш събитие или кауза, да харесаш и коментираш статии!
                </p>
                <a class="primary_btn mr-20" href="/blog/post/add">Добави публикация</a>
                {{#if isAdmin}}
                    <a class="primary_btn mr-20 yellow_btn" href="/blog/category/all">Категории</a>
                    <a class="primary_btn mr-20" href="/blog/category/add">Добави категория</a>
                {{/if}}
                <!--<a class="primary_btn yellow_btn text-white" href="/cause/all">Виж каузите</a>-->
                <!--<a class="primary_btn mr-20" href="/products">Купи продукт</a>-->
            </div>
        </div>
    </div>
</section>

<section id="posts">
    {{#each posts}}
        <article>
            <h2>{{title}}</h2>
            <p>{{content}}</p>
            <div>
                <a href="/blog/post/like/{{_id}}">
                    <i class="fas fa-thumbs-up"></i>
                </a>
                <a href="/blog/post/dislike/{{_id}}">
                    <i class="fas fa-thumbs-down"></i>
                </a>
                <a href="/blog/post/details/{{_id}}">Read more</a>
                <h4>Category: {{category.name}}</h4>
                <p>Author: {{creator}}</p>
                <p>Creation date: {{date}}</p>
            </div>
        </article>
    {{/each}}
</section>

